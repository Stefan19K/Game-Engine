		</control>
		<control>
			<key>U</key>
			<action>ROTATE_CAMERA_POSITIVE_Y</action>
		</control>
		<control>
			<key>r</key>
			<action>SWITCH_DEBUG_MODE</action>
		</control>
		<control>
			<!--Right arrow de pe tastatura-->
			<key>'</key>
			<action>NEXT_CAMERA</action>
		</control>
		<control>
			<!--Left arrow de pe tastatura-->
			<key>%</key>
			<action>PREV_CAMERA</action>
		</control>
		<!-- adaugati restul -->
	</controls>
	
	
